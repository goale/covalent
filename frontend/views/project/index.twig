{{ use('yii/widgets/LinkPager') }}

{{ set(this, 'title', t('app', 'Explore projects')) }}
{{ set(this, 'params', { 'breadcrumbs' : [
    { 'label' : this.title }
    ] })
}}
<div class="projects-list">
    <div class="row">
        <div class="col-md-9">
            <h2>{{ t('app', 'Projects') }}</h2>
        </div>
        <div class="col-md-3 groups-list__btn-new">
            <a class="btn btn-success" href="/projects/new">{{ t('app', 'New project') }}</a>
        </div>
    </div>
    {% if projects is empty %}
        <p>{{ t('app', 'No projects') }}</p>
    {% else %}
        {% for project in projects %}
            <div class="groups-list__item">
                {#  %}{% if group.editable %}
                    <div class="groups-list__item-controls">
                        <a class="glyph-btn" href="/groups/{{ group.code }}/edit">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                    </div>
                {% endif %} #}
                <a href="{{ project.slug }}">{{ project.name }}</a><br>
            <span class="group-item__info">
                {#{{ t('app', '{users} users', { 'users' : group.users }) }},
                {{ t('app', '{projects} projects', { 'projects' : group.projects }) }}#}
            </span>
            </div>
        {% endfor %}
    {% endif %}
    {{ LinkPager_widget({ 'pagination' : pagination }) }}
</div>

