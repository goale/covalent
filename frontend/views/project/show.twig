{{ set(this, 'title', project.name) }}
{{ set(this, 'params', { 'breadcrumbs' : [
    { 'label' : t('app', 'Projects'), 'url' : '/projects' },
    { 'label' : this.title }
    ] }) }}
<div class="group-detail">
    <div class="group-detail">
        {% if project.description is defined %}
            <div class="group-detail__description highlight">
                {{ project.description | raw }}
            </div>
        {% endif %}
        {% if canEdit %}
        <ul class="nav nav-tabs">
                <li role="presentation" class="active"><a href="#">Users</a></li>
        </ul>
            <div class="group-detail__users">
                <div class="group-detail__users-item">
                    <div class="group-detail__users-item-first">
                        <a href="#" target="_blank">{{  owner.username }}</a>
                        <span class="label label-success">{{ t('app', 'Owner') }}</span>
                    </div>

                </div>
                {% for user in groupUsers %}
                    {{ include('user.twig', { 'group': group.id, 'user' : user }) }}
                {% endfor %}
                <div class="group-detail__users-add">
                    <form name="group-user-add" class="form-inline" data-group="{{ group.id }}">
                        <select name="group_user" class="form-control group-detail__users-add-user">
                            <option value="">{{ t('app', 'Choose user') }}</option>
                            {% for user in users %}
                                <option value="{{ user.id }}">{{ user.username }}</option>
                            {% endfor %}
                        </select>
                        <select name="group_user_role" class="form-control">
                            {% for id, role in roles %}
                                <option value="{{ id }}">{{ role }}</option>
                            {% endfor %}
                        </select>
                        <button class="btn btn-primary group-detail__users-add-btn" disabled>
                            {{ t('app', 'Add user') }}
                        </button>
                        <span class="group-detail__users-add-error text-danger"></span>
                    </form>
                </div>
            </div>
        {% endif %}
    </div>
</div>