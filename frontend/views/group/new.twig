{{ set(this, 'title', 'Add group') }}
{{ set(this, 'params', { 'breadcrumbs' : [
    { 'label' : 'Groups', 'url' : '/groups' },
    { 'label' : this.title }
] }) }}
<div class="group-new">
    {% set form = active_form_begin({
        'id' : 'group-new-form',
        'action' : '/groups'
    }) %}
    <div class="form-group">
        <div class="row">
            <div class="col-lg-6">
                {{ form.field(model, 'name').textInput({ 'autofocus' : true }) | raw }}
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-12">
                {{ html.activeLabel(model, 'description') | raw }}
                <div class="zero-preview">
                    <span class="preview-btn group-new__preview-btn">
                        Preview
                    </span>
                </div>
                {{ html.activeTextarea(model, 'description', { class : 'form-control group-new__description' }) | raw }}
                <figure class="highlight group-new__preview"></figure>
            </div>
        </div>
    </div>
    {{ html.submitButton('Add group', { 'class' : 'btn btn-primary' }) | raw }}
    {{ active_form_end() }}
</div>