{{ set(this, 'title', t('app', 'Groups')) }}
{{ set(this, 'params', { 'breadcrumbs' : [
    { 'label' : this.title, 'url' : '/groups' },
    ] }) }}
<div class="groups-list">
    <div class="row">
        <div class="col-md-9">
            <h2>{{ t('app', 'Groups') }}</h2>
        </div>
        <div class="col-md-3 groups-list__btn-new">
            <a class="btn btn-success" href="/groups/new">{{ t('app', 'New group') }}</a>
        </div>
    </div>
    {% if groups is empty %}
        <p>{{ t('app', 'No groups') }}</p>
    {% else %}
    {% for group in groups %}
        <div class="groups-list__item">
            {% if group.editable %}
            <div class="groups-list__item-controls">
                <a class="glyph-btn" href="/groups/{{ group.code }}/edit">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </div>
            {% endif %}
            <a href="/groups/{{ group.code }}">{{ group.name }}</a><br>
            <span class="group-item__info">
                {{ t('app', '{users} users', { 'users' : group.users }) }},
                {{ t('app', '{projects} projects', { 'projects' : group.projects }) }}
            </span>
        </div>
    {% endfor %}
    {% endif %}
</div>